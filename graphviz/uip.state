startup -> init (started)
init -> idle (initialised)
idle -> process (process request)
process -> process (processing)
process -> idle (process complete)
process -> sound_alarm (error detected)
sound_alarm -> log_alarm (alarm sounded)
log_alarm -> alarm_response (alarm logged)
alarm_response -> alarm_response (awaiting mute request)
alarm_response -> mute_alarm (mute request)
mute_alarm -> idle (muted)